<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartGrowHub.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:loading="clr-namespace:SmartGrowHub.Maui.Features.Loading.View"
    xmlns:login="clr-namespace:SmartGrowHub.Maui.Features.LogIn.View"
    xmlns:main="clr-namespace:SmartGrowHub.Maui.Features.Main.View"
    Title="Smart Grow Hub"
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent ContentTemplate="{DataTemplate loading:LoadingPage}" Route="Loading" />
    <ShellContent ContentTemplate="{DataTemplate login:StartPage}" Route="Login" />
    <ShellContent ContentTemplate="{DataTemplate main:MainPage}" Route="Main" />
</Shell>