<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartGrowHub.Maui.Features.Main.View.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControls="clr-namespace:SmartGrowHub.Maui.CustomControls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="#F2F2F7"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#F2F2F7" StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>

    <ScrollView Padding="20,100,20,20">
        <VerticalStackLayout Spacing="10">
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Style="{StaticResource Headline}"
                    Text="Your plants" />
                <customControls:TextButton
                    Grid.Column="1"
                    FontSize="16"
                    Text="Edit"
                    TextColor="#81AF00"
                    VerticalOptions="Center" />
            </Grid>

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                <Border
                    Padding="10,0,0,0"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 8">
                    <Entry
                        FontSize="15"
                        MinimumHeightRequest="0"
                        Opacity="0.8"
                        Placeholder="Search"
                        PlaceholderColor="#74767C" />
                </Border>
                
                <customControls:CustomImageButton
                    Grid.Column="1"
                    Padding="5"
                    BackgroundColor="White"
                    HeightRequest="37"
                    ImageSource="sort_icon.png"
                    StrokeShape="RoundRectangle 8"
                    WidthRequest="42" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>