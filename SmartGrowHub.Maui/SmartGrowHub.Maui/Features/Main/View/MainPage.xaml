<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SmartGrowHub.Maui.Features.Main.View.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControls="clr-namespace:SmartGrowHub.Maui.CustomControls"
    Shell.TabBarIsVisible="True">
    <ScrollView Padding="20,40,20,20">
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Style="{StaticResource Headline}"
                    Text="Your plants" />
                <customControls:TextButton
                    Grid.Column="1"
                    FontSize="16"
                    Text="Edit"
                    TextColor="#81AF00"
                    VerticalOptions="Center" />
            </Grid>

            <Grid ColumnDefinitions="*,Auto">
                <SearchBar
                    Margin="-20,0,0,0"
                    MinimumWidthRequest="20"
                    Placeholder="Search" />
                <customControls:CustomImageButton
                    Grid.Column="1"
                    HeightRequest="25"
                    ImageSource="sort_icon.png"
                    Stroke="White"
                    WidthRequest="25" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>