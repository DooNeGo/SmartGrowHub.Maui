<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="SmartGrowHub.Maui.Features.LogIn.View.RoundImageButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:view="clr-namespace:SmartGrowHub.Maui.Features.LogIn.View"
    x:Name="This"
    Padding="13"
    BackgroundColor="{toolkit:AppThemeResource Key=PageBackgroundColor1}"
    HeightRequest="50"
    StrokeShape="RoundRectangle 25"
    WidthRequest="50">

    <Image x:DataType="view:RoundImageButton" Source="{Binding ImageSource, Source={x:Reference This}}" />

    <Border.Shadow>
        <Shadow
            Brush="{toolkit:AppThemeResource Key=ContrastColor}"
            Opacity="0.1"
            Radius="5"
            Offset="0,1" />
    </Border.Shadow>
</Border>
