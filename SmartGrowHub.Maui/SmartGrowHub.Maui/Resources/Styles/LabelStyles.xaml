<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:styles="clr-namespace:SmartGrowHub.Maui.Resources.Styles">

    <Style x:Key="SmallRegular" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="{x:Static styles:Fonts.Regular}" />
    </Style>

    <Style x:Key="MediumSemiBold" TargetType="Label">
        <Setter Property="FontFamily" Value="{x:Static styles:Fonts.SemiBold}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="MediumMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="{x:Static styles:Fonts.Medium}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style
        x:Key="XMediumMedium"
        BasedOn="{StaticResource MediumMedium}"
        TargetType="Label">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style
        x:Key="SmallRegularCaption"
        BasedOn="{StaticResource SmallRegular}"
        TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CaptionColorLight}, Dark={StaticResource CaptionColorDark}}" />
    </Style>

    <Style
        x:Key="SmallSemiBoldCaption"
        BasedOn="{StaticResource SmallRegularCaption}"
        TargetType="Label">
        <Setter Property="FontFamily" Value="{x:Static styles:Fonts.SemiBold}" />
    </Style>

    <Style
        x:Key="XSmallMediumCaption"
        BasedOn="{StaticResource SmallRegularCaption}"
        TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="{x:Static styles:Fonts.Medium}" />
    </Style>

    <Style x:Key="LargeMediumContrast" TargetType="Label">
        <Setter Property="FontFamily" Value="{x:Static styles:Fonts.Medium}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ContrastColorLight}, Dark={StaticResource ContrastColorDark}}" />
    </Style>

    <Style
        x:Key="XxLargeSemiBoldPrimary"
        BasedOn="{StaticResource MediumSemiBold}"
        TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="FontSize" Value="32" />
    </Style>

    <Style
        x:Key="XLargeSemiBoldPrimary"
        BasedOn="{StaticResource XxLargeSemiBoldPrimary}"
        TargetType="Label">
        <Setter Property="FontSize" Value="22" />
    </Style>
</ResourceDictionary>