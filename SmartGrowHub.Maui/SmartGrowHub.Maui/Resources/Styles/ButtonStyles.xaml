<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{OnPlatform Android={StaticResource PrimaryLinearGradientBrush}}" />
        <Setter Property="BackgroundColor" Value="{OnPlatform iOS={StaticResource Primary}}" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="InterSemiBold" />
    </Style>

</ResourceDictionary>